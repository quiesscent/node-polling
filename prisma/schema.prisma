generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Student {
  id       Int    @id @default(autoincrement())
  name     String
  course   String
  reg      String @unique
  password String
  campus   String
  vote     Vote[]
}

model Candidate {
  id          Int    @id @default(autoincrement())
  name        String
  course      String
  reg         String @unique
  password    String
  post        String
  candidateId Int    @unique
  campus      String
  vote        Vote[]
}

model Vote {
  id          Int       @id @default(autoincrement())
  studentId   Int
  candidateId Int
  student     Student   @relation(fields: [studentId], references: [id])
  candidate   Candidate @relation(fields: [candidateId], references: [id])

  @@unique([studentId]) // A student can only vote once
}
